{
  "name": "deluca/ecoride",
  "description": "site de covoiturage",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.2 || ^8.1",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*",
    "ext-mbstring": "*",
    "ext-json": "*",
    "ext-openssl": "*",
    "mongodb/mongodb": "^2.1",
    "phpmailer/phpmailer": "^6.9",
    "vlucas/phpdotenv": "^5.6"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform-check": false
  },
  "scripts": {
    "post-install-cmd": [
      "@php -r \"file_exists('public/.htaccess') || copy('public/.htaccess.example','public/.htaccess');\""
    ]
  }
}
